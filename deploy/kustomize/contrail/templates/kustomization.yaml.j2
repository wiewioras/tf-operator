bases:
- ../../base/contrail

patchesStrategicMerge:
  - auth.yaml
  - cluster.yaml
  - config.yaml
  - control.yaml
  - replicas.yaml
  - image-secrets.yaml
  - vrouter.yaml

# set contrail-status image
patchesJson6902:
  - target:
      kind: Manager
      name: cluster1
      group: tf.tungsten.io
      version: v1alpha1
    path: kube-manager.json
  - target:
      kind: Manager
      name: cluster1
      group: tf.tungsten.io
      version: v1alpha1
    path: db.json

